{
  "name": "ppt",
  "version": "1.0.0",
  "description": "web ppt with The HTML Presentation Framework",
  "homepage": "https://neveryu.github.io/ppt/",
  "subdomain": "revealjs",
  "subdomain_homepage": "https://revealjs.com",
  "license": "MIT",
  "scripts": {
    "inliner": "gulp htmlinliner",
    "zip": "gulp package"
  },

  "author": {
    "name": "Never Yu",
    "email": "never_yu@qq.com",
    "web": "https://neveryu.github.io/neveryu/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neveryu/ppt"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "reveal",
    "slides",
    "presentation",
    "neveryu",
    "ppt"
  ],
  "devDependencies": {
    "glob": "10.4.2",
    "gulp": "4.0.2",
    "gulp-header": "2.0.9",
    "gulp-rimraf": "1.0.0",
    "gulp-zip": "5.1.0",
    "inliner": "1.13.1",
    "yargs": "17.7.2"
  },
  "overrides": {
    "chokidar": "3.5.3",
    "glob-parent": "6.0.2"
  },
  "browserslist": "> 2%, not dead",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "requireConfigFile": false
    },
    "globals": {
      "module": false,
      "console": false,
      "unescape": false,
      "define": false,
      "exports": false
    },
    "rules": {
      "curly": 0,
      "eqeqeq": 2,
      "wrap-iife": [
        2,
        "any"
      ],
      "no-use-before-define": [
        2,
        {
          "functions": false
        }
      ],
      "new-cap": 2,
      "no-caller": 2,
      "dot-notation": 0,
      "no-eq-null": 2,
      "no-unused-expressions": 0
    }
  }
}
